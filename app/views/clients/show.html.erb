<div class="contextual">
  <%= link_to_if_authorized l(:button_edit), {:controller => 'clients', :action => 'edit', :id => @project, :client_id => @client.id}, :class => 'icon icon-edit' unless @client.nil? %>
  <%= link_to_if_authorized l(:label_client_view), {:controller => 'clients', :action => 'show', :id => @project}, :class => 'icon icon-user' %>
  <%= link_to_if_authorized l(:label_client_list), {:controller => 'clients', :action => 'list', :id => @project}, :class => 'icon icon-users' %>
  <%= link_to_if_authorized l(:label_client_new), {:controller => 'clients', :action => 'new', :id => @project}, :class => 'icon icon-add' %>
</div>

<h2><%= l(:label_client) %></h2>

<% unless @clients.empty? -%>
  <% @clients.each do |client| %>
    <div class="box">
      <p>
       <%= h client.name %>
      <span id="client-<%=client.id%>">
        <%= l(:field_client_ip)%>:<br/>
       
        <ul> 
        <% h client.ip_list.each do |ip| %>
            <li><%= ip %>
        <% end %>
        </ul>
        <p> <%= l(:field_client_support_hours) %>: <%= h client.support_hours %> </p>
      </span>
     </p>
    </div>
    <br/>
  <% end %>
<% else %>
  <p class="nodata"><%=l(:label_no_data)%></p>
<% end %>

<% content_for(:header_tags) do %>
  <style type="text/css">
    .icon-users { background-image: url(../../images/users.png); }
  </style>
<% end %>

